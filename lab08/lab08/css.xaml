<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="lab08.css">
    <ContentPage.Resources>
        <StyleSheetExtension Source="Styles/Styles.css"/>
    </ContentPage.Resources>
    <StackLayout VerticalOptions="Center" Margin="20">
        <Label x:Name="title" Text="ACCESO"/>
        <StackLayout Orientation="Vertical">
            <Entry Placeholder="Your username"></Entry>
            <Entry Placeholder="Your password"></Entry>
        
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            
            <Button x:Name="signup" Text="Sign-Up"></Button>
        </StackLayout>
    </StackLayout>
</ContentPage>